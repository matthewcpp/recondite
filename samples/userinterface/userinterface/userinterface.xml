<overlay>
	<head>
		<controller type="UserInterfaceController" />
		<stylesheet>userinterface.css</stylesheet>
	</head>
	<body>
		<absolutelayout>
			<linearlayout id="main-layout" direction="vertical">
				<linearlayout id="checkbox-layout" direction="horizontal">
					<text>Rotate Model: </text><checkbox id="rotate_checkbox" />
				</linearlayout>
				
				<linearlayout  direction="horizontal">
					<text>Rotation Speed: </text>
					<slider id="rotate_speed" min="0" max="50"/>
				</linearlayout>
			</linearlayout>
			
			<logtext id="logtext" />
		</absolutelayout>
	</body>
</overlay>