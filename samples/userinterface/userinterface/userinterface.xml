<document>
	<head>
		<controller type="UserInterfaceController" />
		<stylesheet>userinterface.css</stylesheet>
	</head>
	<body>
		<absolutelayout>
			<linearlayout id="main-layout" direction="vertical">
			
			<linearlayout direction="horizontal" class="control-group">
					<text>Model:</text>
					<picker id="modelpicker">
						<option>Box</option>
						<option>Plane</option>
						<option>Cylinder</option>
						<option>Cone</option>
						<option>Sphere</option>
					</picker>
			</linearlayout>
			
			<linearlayout direction="horizontal" class="control-group">
				<text>R:</text><textbox id="rbox">255</textbox>
				<text>G:</text><textbox id="gbox">255</textbox>
				<text>B:</text><textbox id="bbox">255</textbox>
				<button id="rgbbutton">Apply</button>
			</linearlayout>
			
			<linearlayout direction="horizontal" class="control-group">
					<text>Rotate Model: </text><checkbox id="rotate_checkbox" />
			</linearlayout>
				
			<linearlayout  direction="horizontal" class="control-group">
					<text>Rotation Speed: </text>
					<slider id="rotate_speed" min="0" max="50" value="25"/>
				</linearlayout>
				<analogstick />
			</linearlayout>
			
			
			<logtext id="logtext" />
			<button id="reloadstyles">Reload Stylesheet</button>
		</absolutelayout>
	</body>
</document>